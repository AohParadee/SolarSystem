<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aoh.solarsystem.LoginActivity"
    android:background="@drawable/bg4">

    <RelativeLayout tools:context="com.example.aoh.solarsystem.MainActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/bg4" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_text"
            android:id="@+id/loginText"
            android:textSize="25dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="40dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:baselineAligned="true"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="250dp"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/login_name"
                    android:id="@+id/loginName"
                    android:textSize="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/login_student_code"
                    android:id="@+id/loginCode"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginRight="20dp" >

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:id="@+id/editText11"
                    android:background="@color/button_material_light"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:id="@+id/editText12"
                    android:background="@color/button_material_light"
                    android:layout_marginBottom="20dp"
                    android:textColor="@android:color/black" />

                <Button
                    style="@style/AlertDialog.AppCompat"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:id="@+id/loginButton"
                    android:background="@drawable/login"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_marginLeft="35dp"
                    android:onClick="clickLoginOk" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
