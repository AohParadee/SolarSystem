<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aoh.solarsystem.MainActivity"
    android:background="@drawable/bg4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signin_text"
        android:id="@+id/signinText"
        android:textSize="25dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_text"
        android:id="@+id/loginText"
        android:textSize="25dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:baselineAligned="true"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:id="@+id/name"
                android:textSize="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/surname"
                android:id="@+id/surname"
                android:textSize="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/student_code"
                android:id="@+id/studentCode"
                android:textSize="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/teacher_name"
                android:id="@+id/teacherName"
                android:textSize="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:weightSum="1">

            <EditText
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/editText"
                android:background="@color/button_material_light"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/editText2"
                android:background="@color/button_material_light"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/editText3"
                android:background="@color/button_material_light"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/editText4"
                android:background="@color/button_material_light"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/signinOk"
                android:background="@drawable/signin"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginLeft="25dp"
                style="@style/AlertDialog.AppCompat"
                android:layout_weight="0.16" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/login_name"
                android:id="@+id/loginName"
                android:textSize="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/login_student_code"
                android:id="@+id/loginStudentCode"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/editText5"
                android:background="@color/button_material_light"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/editText6"
                android:background="@color/button_material_light"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <Button
                style="@style/AlertDialog.AppCompat"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:id="@+id/loginOk"
                android:background="@drawable/login"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginLeft="35dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
