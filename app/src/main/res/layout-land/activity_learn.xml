<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aoh.solarsystem.LearnActivity"
    android:background="@drawable/bg4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/textView"
            android:textColor="#f6d608"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="170dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@drawable/mercury"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="clickLearn1" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:layout_weight="1"
                android:src="@drawable/venus"
                android:onClick="clickLearn2" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView8"
                android:layout_weight="1"
                android:src="@drawable/earth"
                android:onClick="clickLearn3" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView9"
                android:layout_weight="1"
                android:src="@drawable/mars"
                android:onClick="clickLearn4" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView10"
                android:src="@drawable/jupiter"
                android:layout_weight="1"
                android:onClick="clickLearn5" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView11"
                android:layout_weight="1"
                android:onClick="clickLearn6"
                android:src="@drawable/saturn" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView12"
                android:layout_weight="1"
                android:src="@drawable/uranus"
                android:onClick="clickLearn7" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView13"
                android:layout_weight="1"
                android:src="@drawable/neptune"
                android:onClick="clickLearn8" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
